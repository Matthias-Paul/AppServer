{
  "name": "mediaunboxed",
  "version": "1.0.0",
  "description": "An Electron application with React",
  "main": "./out/main/index.js",
  "author": "mediaunboxed.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "prebuild": "cd backend && npm ci --production",
    "clean": "rm -rf dist/ out/ node_modules/.cache/ ~/.cache/electron ~/.cache/electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run prebuild && npm run build && electron-builder",
    "dist:dir": "npm run prebuild && npm run build && electron-builder --dir",
    "dist:win": "npm run prebuild && npm run build && electron-builder --win",
    "dist:mac": "npm run prebuild && npm run build && electron-builder --mac",
    "dist:linux": "npm run prebuild && npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/vite": "^4.1.8",
    "@tanstack/react-query": "^5.80.6",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.4",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-qr-code": "^2.0.15",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.2",
    "react-select": "^5.10.1",
    "recharts": "^2.15.3",
    "redux-persist": "^6.0.0",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "sqlite3": "^5.1.7",
    "sudo-prompt": "^9.2.1",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^6.2.6"
  },
  "build": {
    "appId": "com.mediaunboxed.desktop",
    "productName": "MediaUnboxed",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "backend/**/*",
      "!backend/.git/**/*",
      "!backend/*.log",
      "!backend/test/**/*"
    ],
    "extraFiles": [
      {
        "from": ".env",
        "to": "resources/.env"
      },
      {
        "from": "backend",
        "to": "resources/backend",
        "filter": [
          "**/*",
          "!node_modules/**/*",
          "!.git/**/*",
          "!*.log",
          "!test/**/*",
          "!fileStorage/**/*"
        ]
      }
    ],
    "mac": {
      "identity": null,
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": {
        "target": "default",
        "arch": ["x64", "arm64"]
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      }
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
